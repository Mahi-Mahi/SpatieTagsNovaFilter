{
    "name": "mahi/spatie-tags-nova-filter",
    "description": "A Laravel Nova filter for Spatie/Laravel-Tags.",
    "homepage": "https://github.com/Mahi-Mahi/SpatieTagsNovaFilter",
    "authors": [
        {
            "name": "Olivier Mourlevat",
            "email": "olivier.mourlevat@bronx.fr",
            "role": "Developer"
        }
    ],
    "keywords": [
        "laravel",
        "nova",
        "tags",
        "filter",
        "spatie"
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.1.0",
        "spatie/laravel-tags": "^2.3|^3.0|^4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20"
    },
    "autoload": {
        "psr-4": {
            "Mahi\\SpatieTagsNovaFilter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mahi\\SpatieTagsNovaFilter\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mahi\\SpatieTagsNovaFilter\\FilterServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
